{
  "author": "Koni Studio",
  "license": "Apache-2.0",
  "version": "0.1.0",
  "packageManager": "yarn@3.2.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/polkadot-js/api.git"
  },
  "sideEffects": false,
  "type": "commonjs",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "yarn watch",
    "lint": "polkadot-dev-run-lint",
    "clean": "polkadot-dev-clean-build",
    "test": "polkadot-dev-run-test --detectOpenHandles --testPathIgnorePatterns='/node_modules/|.*/ignore-.*\\.(test|spec)\\..*'",
    "build:ui": "packages/sub-connect && yarn polkadot-exec-webpack --config webpack.config.cjs --mode production",
    "watch": "cd packages/sub-connect && yarn polkadot-exec-webpack --config webpack.watch.cjs --mode development --watch"
  },
  "devDependencies": {
    "@polkadot/dev": "^0.66.28"
  },
  "resolutions": {
    "typescript": "^4.6.4",
    "@polkadot/api": "*",
    "@polkadot/types": "*"
  }
}
